<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.soldev.fieldservice.TaskFormCheckingListTabFragement">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_remark"
                    android:textAppearance="@style/CustomLabel"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/edtTaskRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="?attr/editTextColor"
                    android:background="?attr/editTextBackground"
                    android:textAppearance="@style/CustomEditTextDisplay"/>
            </LinearLayout>
            <CheckBox
                android:id="@+id/chbNoWorkPerform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_noworkperformed"
                android:textAppearance="@style/CustomLabel"/>
            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdHasReveiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_has_signature"
                    android:textAppearance="@style/CustomLabel"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rdHasNoReveiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_no_signature"
                    android:layout_weight="1"
                    android:textAppearance="@style/CustomLabel"/>
            </RadioGroup>
            <LinearLayout
                android:id="@+id/llDetail"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_customer_receiver"
                        android:textAppearance="@style/CustomLabel"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_contact"
                        android:textAppearance="@style/CustomLabel"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:id="@+id/edtCheckBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/CustomEditTextDisplay"
                        android:hint="@string/label_required"
                        android:textColor="?attr/editTextColor"
                        android:background="?attr/editTextBackground"
                        android:textColorHint="@android:color/holo_red_light"/>
                    <TextView
                        android:id="@+id/edtContactNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/CustomEditTextDisplay"
                        android:hint="@string/label_required"
                        android:textColor="?attr/editTextColor"
                        android:background="?attr/editTextBackground"
                        android:textColorHint="@android:color/holo_red_light"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_deliver_signature"
                        android:textAppearance="@style/CustomLabel"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/imgDeliverSignature"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:minHeight="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_rectangle"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnSignatureDeliver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_signature"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/btn_round_button"
                            android:layout_alignParentEnd="true"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llSatisfaction"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_team_behavior"
                        android:textAppearance="@style/CustomLabel"
                        android:layout_marginBottom="5dp"/>
                    <RadioGroup
                        android:id="@+id/rgBehavior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rdBehaviorVeryGood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/rdBehaviorGood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied_some"/>
                        <RadioButton
                            android:id="@+id/rdBehaviorSoSo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied_so"/>
                        <RadioButton
                            android:id="@+id/rdBehaviorNeedImprove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied_no"/>
                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_team_quality"
                        android:textAppearance="@style/CustomLabel"
                        android:layout_marginBottom="5dp"/>
                    <RadioGroup
                        android:id="@+id/rgQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rdQualityVeryGood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/rdQualityGood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied_some"/>
                        <RadioButton
                            android:id="@+id/rdQualitySoSo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied_so"/>
                        <RadioButton
                            android:id="@+id/rdQualityNeedImprove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied_no"/>

                        <RadioButton
                            android:id="@+id/rdQualityBad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_satisfied_very_no"/>
                    </RadioGroup>
                    <Button
                        android:id="@+id/btnLockSurvey"
                        android:text="ยืนยันการให้คะแนน"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_receive_signature"
                        android:textAppearance="@style/CustomLabel"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/imgReceiveSignature"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:minHeight="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_rectangle"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnReceiveSignature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_signature"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/btn_round_button"
                            android:layout_alignParentEnd="true"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnPrintDeliveryNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Print"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>