<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.soldev.fieldservice.TaskFormPerformQCFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_qc_type"
                    android:textAppearance="@style/CustomLabel"/>
                <TextView
                    android:id="@+id/txtCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_qc_time"
                    android:textAppearance="@style/CustomLabel"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:padding="10dp">
                <CheckBox
                    android:id="@+id/chQCBefore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_before"
                    android:textAppearance="@style/CustomEditTextDisplay"/>
                <EditText
                    android:id="@+id/edtQcBeforeTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:enabled="false"
                    android:clickable="false"
                    android:textAppearance="@style/CustomEditTextDisplay"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:padding="10dp">
                <CheckBox
                    android:id="@+id/chQCBetween"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_between"
                    android:textAppearance="@style/CustomEditTextDisplay"/>
                <EditText
                    android:id="@+id/edtQcBetweenTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:enabled="false"
                    android:clickable="false"
                    android:textAppearance="@style/CustomEditTextDisplay"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:padding="10dp">
                <CheckBox
                    android:id="@+id/chQCAfter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_after"
                    android:textAppearance="@style/CustomEditTextDisplay"/>
                <EditText
                    android:id="@+id/edtQcAfterTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:enabled="false"
                    android:clickable="false"
                    android:textAppearance="@style/CustomEditTextDisplay"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llEnvirontmentCheckingList"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorBlue"
                android:padding="10dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_site_checking"
                    android:textAppearance="@style/CustomTitle"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSiteCheckingList"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>