<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRowEquipment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10sp"
    android:paddingBottom="10sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2sp">
        <TextView
            android:id="@+id/txtEquipmentRow"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:textAppearance="@style/CustomEditTextDisplay"/>
        <TextView
            android:id="@+id/txtEquipmentDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:layout_weight="1"
            android:textAppearance="@style/CustomEditTextDisplay"/>
        <TextView
            android:id="@+id/txtEquipmentUnits"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textAppearance="@style/CustomEditTextDisplay"
            android:gravity="clip_horizontal"/>
        <TextView
            android:id="@+id/txtEquipmentBefore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="10"
            android:textAppearance="@style/CustomEditTextDisplay"
            android:gravity="clip_horizontal"/>
        <TextView
            android:id="@+id/txtEquipmentAfter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="10"
            android:textAppearance="@style/CustomEditTextDisplay"
            android:gravity="clip_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorlightGrey"/>
</LinearLayout>